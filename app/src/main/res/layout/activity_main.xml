<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wugj.picture.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/pic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照选择照片" />

            <Button
                android:id="@+id/pic3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册单选照片" />

            <Button
                android:id="@+id/pic4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册多选照片" />

            <Button
                android:id="@+id/pic6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="照片裁剪" />

            <Button
                android:id="@+id/pic8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="照片压缩" />


            <Button
                android:id="@+id/pic10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="照片转pdf" />

            <Button
                android:id="@+id/pic11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picasso网络照片" />

            <Button
                android:id="@+id/pic12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="照片合成" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
